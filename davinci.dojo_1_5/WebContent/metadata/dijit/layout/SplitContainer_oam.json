{
    "id": "http://dojotoolkit.org/dijit/layout/SplitContainer",
    "name": "dijit.layout.SplitContainer",
    "spec": "1.0",
    "version": "1.0",
    "require": [
        {
            "type": "javascript",
            "src": "dojo/dojo.js",
            "$library": "dojo"
        },
        {
            "type": "css",
            "src": "dojo/resources/dojo.css",
            "$library": "dojo"
        },
        {
            "type": "javascript",
            "$text": "dojo.require('dijit.layout.SplitContainer');"
        }
    ],
    "library": {
        "dojo": {
            "version": "1.5",
            "src": "../../../"
        }
    },
    "property": {
        "activeSizing": {
            "datatype": "boolean",
            "title": "Active Sizing"
        },
        "sizerWidth": {
            "datatype": "number",
            "defaultValue": 7,
            "title": "Sizer Width"
        },
        "orientation": {
            "datatype": "string",
            "option": [
                {
                    "value": "horizontal"
                },
                {
                    "value": "vertical"
                }
            ],
            "defaultValue": "horizontal",
            "title": "Orientation"
        },
        "persist": {
            "datatype": "boolean",
            "defaultValue": true,
            "title": "Persist"
        },
        "isContainer": {
            "datatype": "boolean",
            "description": "Just a flag indicating that this widget descends from dijit._Container",
            "defaultValue": true,
            "hidden": true
        }
    },
    "childProperties": {
        "sizeMin": {
            "datatype": "number",
            "defaultValue": 10,
            "title": "Minimum Size"
        },
        "sizeShare": {
            "datatype": "number",
            "defaultValue": 10,
            "title": "Size Share"
        }
    },
    "content": "<span></span>"
}