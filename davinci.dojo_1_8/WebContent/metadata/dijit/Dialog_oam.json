{
    "id": "http://dojotoolkit.org/dijit/Dialog",
    "name": "dijit.Dialog",
    "spec": "1.0",
    "version": "1.0",
    "require": [
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dijit/Dialog",
            "$library": "dojo"
        }
    ],
    "library": {
        "dojo": {
            "src": "../../dojo/dojo.js"
        }
    },
    "property": {
        "href": {
            "datatype": "string",
            "format": "url",
            "title": "URL"
        },
        "extractContent": {
            "datatype": "boolean",
            "title": "Extract Content"
        },
        "parseOnLoad": {
            "datatype": "boolean",
            "defaultValue": true,
            "title": "Parse On Load"
        },
        "preventCache": {
            "datatype": "boolean",
            "title": "Prevent Cache"
        },
        "preload": {
            "datatype": "boolean",
            "title": "Preload"
        },
        "refreshOnShow": {
            "datatype": "boolean",
            "title": "Refresh On Show"
        },
/*FIXME: Temporarily comment out some properties that result in really ugly attributes in generated source code or are broken.
        "loadingMessage": {
            "datatype": "string",
            "defaultValue": "<span class='dijitContentPaneLoading'>Loading...</span>",
            "title": "Loading Message"
        },
        "errorMessage": {
            "datatype": "string",
            "defaultValue": "<span class='dijitContentPaneError'>Sorry, an error occurred</span>",
            "title": "Error Message"
        },
*/
        "doLayout": {
            "datatype": "boolean",
            "defaultValue": false,
            "hidden": true
        },
        "duration": {
            "datatype": "number",
            "defaultValue": 400,
            "title": "Duration"
        },
        "refocus": {
            "datatype": "boolean",
            "defaultValue": true,
            "title": "Refocus"
        },
        "autofocus": {
            "datatype": "boolean",
            "description": "A Toggle to modify the default focus behavior of a Dialog, which\nis to focus on the first dialog element after opening the dialog.\nFalse will disable autofocusing. Default: true"
        },
        "draggable": {
            "datatype": "boolean",
            "description": "Toggles the moveable aspect of the Dialog. If true, Dialog\ncan be dragged by it's title. If false it will remain centered\nin the viewport."
        },
        "content": {
            "datatype": "string",
            "description": "|| DomNode || NodeList || dijit._Widget\nThe innerHTML of the ContentPane.\nNote that the initialization parameter / argument to attr(\"content\", ...)\ncan be a String, DomNode, Nodelist, or _Widget."
        },
/*FIXME: Temporarily comment out some properties that result in really ugly attributes in generated source code or are broken.
        "ioArgs": {
            "datatype": "json",
            "description": "Parameters to pass to xhrGet() request, for example:\n\t<div dojoType=\"dijit.layout.ContentPane\" href=\"./bar\" ioArgs=\"{timeout: 500}\">",
            "hidden": true
        },
*/
        "isContainer": {
            "datatype": "boolean",
            "description": "Just a flag indicating that this widget will call resize() on its children",
            "defaultValue": true,
            "hidden": true
        }
    },
    "content": "<span></span>"
}