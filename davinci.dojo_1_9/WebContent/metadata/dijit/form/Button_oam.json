{
    "id": "http://dojotoolkit.org/dijit/form/Button",
    "name": "dijit.form.Button",
    "spec": "1.0",
    "version": "1.0",
    "require": [
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dijit/form/Button",
            "$library": "dojo"
        }
    ],
    "library": {
        "dojo": {
            "src": "../../../dojo/dojo.js"
        }
    },
    "property": {
        "type": {
            "datatype": "string",
            "option": [
                {
                    "value": "button"
                },
                {
                    "value": "submit"
                },
                {
                    "value": "reset"
                }
            ],
            "defaultValue": "button",
            "title": "Type"
        },
        "name": {
            "datatype": "string",
            "title": "Name"
        },
        "alt": {
            "datatype": "string",
            "hidden": true
        },
        "value": {
            "datatype": "string",
            "title": "Value"
        },
        "tabIndex": {
            "datatype": "string",
            "defaultValue": "0",
            "title": "Tab Index"
        },
        "disabled": {
            "datatype": "boolean",
            "title": "Disabled"
        },
        "readOnly": {
            "datatype": "boolean",
            "hidden": true
        },
        "intermediateChanges": {
            "datatype": "boolean",
            "hidden": true
        },
        "label": {
            "datatype": "string",
            "title": "Label"
        },
        "showLabel": {
            "datatype": "boolean",
            "defaultValue": true,
            "title": "Show Label"
        },
        "iconClass": {
            "datatype": "string",
            "title": "Icon Class"
        },
        "scrollOnFocus": {
            "datatype": "boolean",
            "description": "On focus, should this widget scroll into view?",
            "hidden": false,
            "defaultValue": true
        }
    },
    "content": "<input type='button'></input>",
    "title": {
        "type": "text/html",
        "value": "<p>Basically the same thing as a normal HTML button, but with special styling.</p>"
    },
    "description": {
        "type": "text/html",
        "value": "<p>Buttons can display a label, an icon, or both.\nA label should always be specified (through innerHTML) or the label\nattribute.  It can be hidden via showLabel=false.</p>"
    },
    "examples": {
        "type": "text/html",
        "value": "<pre><code>&lt;button data-dojo-type=&quot;dijit/form/Button&quot; onClick=&quot;...&quot;&gt;Hello world&lt;/button&gt;</code></pre>\n<pre><code>var button1 = new Button({label: &quot;hello world&quot;, onClick: foo});\ndojo.body().appendChild(button1.domNode);</code></pre>"
    }
}